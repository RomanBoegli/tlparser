{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest (all)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest", // Use `module` instead of `program`
            "args": [
                "-s", // Ensures that `stdout` and `stderr` are not captured
                "--maxfail=1", // Stop after the first failure
                "${workspaceFolder}/tests" // Path to the tests folder
            ],
            "console": "integratedTerminal", // You can also use "internalConsole"
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "stopOnEntry": false
        },
        {
            "name": "unit test (stats)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "--maxfail=1",
                "${workspaceFolder}/tests/logic/test_stats.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "stopOnEntry": false
        },
        {
            "name": "integration test (digest test.json)",
            "type": "debugpy",
            "request": "launch",
            "module": "tlparser",
            "args": [
                "digest",
                "${workspaceFolder}/tests/data/test.json"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "integration test (digest spacewire.json)",
            "type": "debugpy",
            "request": "launch",
            "module": "tlparser",
            "args": [
                "digest",
                "${workspaceFolder}/data/spacewire.json"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "integration test (visualize)",
            "type": "debugpy",
            "request": "launch",
            "module": "tlparser",
            "args": [
                "visualize",
                "--latest",
                "-p",
                "all",
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}